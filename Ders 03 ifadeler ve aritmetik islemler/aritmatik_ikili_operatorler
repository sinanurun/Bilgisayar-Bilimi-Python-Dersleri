sayi1 = 40
sayi2 = 6
kelime1 = "Mahmut"
kelime2 = "Ali"
#toplama +
toplama1 = sayi1 + sayi2
print(toplama1)
toplama2 = kelime1 + kelime2
print(toplama2)
# hata alınır
#toplama3 = sayi1 + kelime1
#print(toplama3)

# çıkartma işlemi yapılacaktır -
fark = sayi1 - sayi2
print(fark)

# çarpma işlemi *
carpma1 = sayi1 * sayi2
print(carpma1)
carpma2 = sayi2 * kelime1
print(carpma2)
carpma3 = kelime2*sayi2
print(carpma3)

#bölme işlemler /
bol = sayi1/sayi2
print(bol)
print(8/4)

# kere bulma //
bol2 = sayi1//sayi2
print(bol2)
bol3 = sayi2//sayi1
print(bol3)

# mod alma işlemi %
modalma = sayi1%sayi2
print(modalma)

#kuvvet alma **
kuvvet = sayi1**sayi2
print(kuvvet)
kuvvet1 = 2**5
print(kuvvet1)